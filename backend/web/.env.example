# Backend Environment Configuration
# Copy to .env and update values for your machine
# NEVER commit the actual .env file - it contains secrets!

# Database Configuration
# CRITICAL: Use a dedicated non-root database user (never use 'root')
DB_HOST=localhost
DB_USER=signhouse_user
DB_PASSWORD=your_secure_database_password
DB_NAME=sign_manufacturing

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# JWT Configuration (generate secure random strings for production)
JWT_SECRET=generate-a-secure-64-character-random-string-for-production
JWT_REFRESH_SECRET=generate-another-secure-64-character-random-string
ENCRYPTION_SALT=generate-a-64-character-hex-string-for-encryption


USE_ENV_QB_CREDENTIALS=true
QB_CLIENT_ID=your_client_id
QB_CLIENT_SECRET=your_client_secret
QB_REDIRECT_URI=your_redirect_uri
QB_ENVIRONMENT=production

# Gmail Configuration (optional â€” for sending PO/order emails)
# Set GMAIL_ENABLED=true and provide the service account path to send emails.
# On the work server, the path is stored in encrypted_credentials DB table.
# For home dev, set the path here to bypass the DB lookup (same pattern as USE_ENV_QB_CREDENTIALS).
GMAIL_ENABLED=true
GMAIL_SENDER_EMAIL=info@signhouse.ca
GMAIL_SENDER_NAME=Sign House
GMAIL_BCC_EMAIL=info@signhouse.ca
GMAIL_SERVICE_ACCOUNT_PATH=config/gmail-service-account.json